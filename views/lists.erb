<ul id="lists">
  <% sort_lists(@lists) do |list| %>
    <li class = <%== 'complete' if all_complete?(list) %>>
      <a href="/lists/<%= list[:id] %>">
        <h2><%= list[:name] %></h2>
        <%# I prefer the number of completed items rather than yet to be completed %>
        <p> <%= todos_completed(list) %> / <%= list[:todos].size %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <div class='actions'>
    <a class="add" href="/lists/new">New List</a>
  </div>
<% end %>
